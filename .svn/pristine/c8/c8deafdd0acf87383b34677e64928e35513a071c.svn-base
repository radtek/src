    public static string deleteFiles(string path) {
        try
        {
            if (File.Exists(path) && (File.GetAttributes(path) & FileAttributes.ReadOnly) == FileAttributes.ReadOnly)
            {
                File.SetAttributes(path, FileAttributes.Normal);
            }
            File.Delete(path);
        }
        catch
        {
            return "0";
        }
        return "1";
    }
